<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundomenosclaro"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MetasActivity"
    tools:showIn="@layout/activity_metas">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="516dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/campo_energia"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:hint="@string/digitar"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="4"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/campo_gorduras"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="@string/digitar"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="@+id/campo_carboidratos"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Gorduras:"
            app:layout_constraintStart_toStartOf="@+id/campo_carboidratos"
            app:layout_constraintTop_toBottomOf="@+id/campo_carboidratos"
            tools:text="Gorduras:" />

        <TextView
            android:id="@+id/txt_gramas4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/txt_gramas"
            app:layout_constraintBottom_toBottomOf="@+id/campo_gorduras"
            app:layout_constraintStart_toEndOf="@+id/campo_gorduras"
            app:layout_constraintTop_toTopOf="@+id/campo_gorduras" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Fibras:"
            app:layout_constraintStart_toStartOf="@+id/campo_gorduras"
            app:layout_constraintTop_toBottomOf="@+id/campo_gorduras"
            tools:text="Fibras:" />

        <EditText
            android:id="@+id/campo_fibras"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="@string/digitar"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="@+id/campo_gorduras"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/txt_gramas5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_gramas"
            app:layout_constraintBottom_toBottomOf="@+id/campo_fibras"
            app:layout_constraintStart_toEndOf="@+id/campo_fibras"
            app:layout_constraintTop_toTopOf="@+id/campo_fibras" />

        <EditText
            android:id="@+id/campo_reset"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/digitar"
            android:imeOptions="actionDone"
            android:inputType="time"
            android:maxLength="5"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="@+id/campo_fibras"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Horário de Reinício:"
            app:layout_constraintStart_toStartOf="@+id/campo_fibras"
            app:layout_constraintTop_toBottomOf="@+id/campo_fibras"
            tools:text="Horário de Reinício:" />

        <TextView
            android:id="@+id/txt_gramas3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_gramas"
            app:layout_constraintBottom_toBottomOf="@+id/campo_carboidratos"
            app:layout_constraintStart_toEndOf="@+id/campo_proteinas"
            app:layout_constraintTop_toTopOf="@+id/campo_carboidratos" />

        <EditText
            android:id="@+id/campo_carboidratos"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:hint="@string/digitar"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Carboidratos:"
            app:layout_constraintStart_toStartOf="@+id/campo_carboidratos"
            app:layout_constraintTop_toBottomOf="@+id/campo_proteinas"
            tools:text="Carboidratos:" />

        <EditText
            android:id="@+id/campo_proteinas"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:hint="@string/digitar"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/campo_energia"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Proteinas:"
            app:layout_constraintStart_toStartOf="@+id/campo_proteinas"
            app:layout_constraintTop_toBottomOf="@+id/campo_energia"
            tools:text="Proteinas:" />

        <TextView
            android:id="@+id/txt_gramas2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="kcal"
            app:layout_constraintBottom_toBottomOf="@+id/campo_energia"
            app:layout_constraintStart_toEndOf="@+id/campo_energia"
            app:layout_constraintTop_toTopOf="@+id/campo_energia" />



        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Energia:"
            app:layout_constraintStart_toStartOf="@+id/campo_energia"
            tools:layout_editor_absoluteY="16dp"
            tools:text="Energia:" />

        <TextView
            android:id="@+id/txt_gramas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_gramas"
            app:layout_constraintBottom_toBottomOf="@+id/campo_proteinas"
            app:layout_constraintStart_toEndOf="@+id/campo_proteinas"
            app:layout_constraintTop_toTopOf="@+id/campo_proteinas" />

        <Button
            android:id="@+id/button_sair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:text="@string/txt_botao_sair"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_salvar"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/campo_reset" />

        <Button
            android:id="@+id/button_salvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/txt_botao_salvar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_sair"
            app:layout_constraintTop_toBottomOf="@+id/campo_reset" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="horas"
            app:layout_constraintBottom_toBottomOf="@+id/campo_reset"
            app:layout_constraintStart_toEndOf="@+id/campo_reset"
            app:layout_constraintTop_toTopOf="@+id/campo_reset" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>